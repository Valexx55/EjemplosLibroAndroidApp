<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tema5.ActividadCuadrosSetTag">
    <LinearLayout
        android:id="@+id/cajanaranja"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="horizontal"
        android:background="@color/minaranja"
        android:onClick="cajaTocada"
        android:layout_weight="1"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="horizontal"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="0px"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/black"
            android:onClick="cajaTocada"
            android:id="@+id/cajanegra"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:id="@+id/cajamorada"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:background="@color/purple_700"
            android:onClick="cajaTocada"
            android:layout_weight="5"></LinearLayout>
    </LinearLayout>

</LinearLayout>